@using Microsoft.AspNetCore.Http
@inject AuthBusinessRules AuthBusinessRules
@rendermode InteractiveAuto
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">System.AppWeb</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link">
                        <span @onclick="HandleLoggout" class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Loggout
                    </NavLink>
                    <LoggoutButton></LoggoutButton>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">

                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> NÃ£o Autorizado!
                    </NavLink>
                </div>
            </NotAuthorized>
            
        </AuthorizeView>
    </nav>

@page "/Auth/Login"
@rendermode InteractiveServer
@inject AuthBusinessRules AuthBusinessRules


<div class="login-container">
    <h3>Login</h3>
    <EditForm Model="@AccountModel" OnSubmit="HandleLogin">

        <div class="form-group">
            <label for="username">Username</label>
            <InputText id="username" class="form-control" @bind-Value="@AccountModel.Login" />
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <InputText id="password" type="password" class="form-control" @bind-Value="@AccountModel.Password" />
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
    </EditForm>
</div>


@code {
    private Account AccountModel = new Account();

    private async Task HandleLogin()
    {
        await AuthBusinessRules.Login(AccountModel);
    }
}
